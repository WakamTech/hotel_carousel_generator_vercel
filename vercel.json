{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/generate", 
      "dest": "/api/index.py"
    },
    {
      "src": "/generated_images/(.*)", 
      "dest": "/api/index.py"         
    }
  ],
  "functions": {
    "api/index.py": {
      "memory": 1024,   
      "maxDuration": 25 
    }
  },
  "env": {
    "FLASK_ENV": "production" 
  }
}